@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_BaseLayout.cshtml";
    DBProject.Models.Message message = null;

    
}
 
<div class="login-box">
    <div class="login-logo">
        <a href=""><b>Admin</b></a>
    </div><!-- /.login-logo -->
    @if (Model.DataObject != null)
    {
        message = (DBProject.Models.Message)Model.DataObject;
        <div class="callout callout-danger">
            <h4>@message.Title Error</h4>
            <p>@message.MessageText</p>
        </div>
    }
    <div class="login-box-body">
        <p class="login-box-msg">Sign in to start your session</p>
        <form action="@Model.SetWebUrl("/Home/Login")" method="post">
            <div class="form-group has-feedback">
                <input type="text" class="form-control" name="User_ID" required placeholder="User ID">
                <span class="glyphicon glyphicon-user form-control-feedback"></span>
            </div>
            <div class="form-group has-feedback">
                <input type="password" class="form-control" name="Password" required placeholder="Password">
                <span class="glyphicon glyphicon-lock form-control-feedback"></span>
            </div>
            <div class="row">
                <div class="col-xs-8">
                </div><!-- /.col -->
                <div class="col-xs-4">
                    <button type="submit" class="btn btn-primary btn-block btn-flat">Sign In</button>
                </div><!-- /.col -->
            </div>
        </form>



    </div><!-- /.login-box-body -->
</div><!-- /.login-box -->
